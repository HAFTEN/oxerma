%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container
    = link_to 'OXERMA', root_path, class: 'navbar-brand'
    %button.navbar-toggler{"aria-controls" => "navbarNavDropdown", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNavDropdown", "data-toggle" => "collapse", type: "button"}
      %span.navbar-toggler-icon
    #navbarNavDropdown.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        - if user_authenticated?
          %li.nav-item{class: link_class_active(users_path)}
            = link_to 'Пользователи', users_path, class: 'nav-link'
          %li.nav-item{class: link_class_active(organizations_path)}
            = link_to 'Организации', organizations_path, class: 'nav-link'
          %li.nav-item{class: link_class_active(tickets_path)}
            = link_to 'Запросы', tickets_path, class: 'nav-link'
          %li.nav-item.dropdown
            %a.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", href: "#"}
              = image_tag current_user.image.thumb_small.url, size:'24x24', class: 'rounded'
            .dropdown-menu
              = link_to 'Моя страница', user_path(current_user), class: "dropdown-item #{link_class_active(user_path(current_user))}"
              .dropdown-divider
              = link_to 'Редактировать', edit_user_path(current_user), class: "dropdown-item #{link_class_active(edit_user_path(current_user))}"
              = link_to 'Настройки', settings_user_path(current_user), class: "dropdown-item #{link_class_active(settings_user_path(current_user))}"
              .dropdown-divider
              = link_to 'Выйти', :sessions, method: :delete, class: 'dropdown-item'
        - else
          %li.nav-item{class: link_class_active(new_sessions_path)}
            = link_to 'Авторизация', new_sessions_path, class: 'nav-link'
          %li.nav-item{class: link_class_active(new_user_path)}
            = link_to 'Регистрация', new_user_path, class: 'nav-link'