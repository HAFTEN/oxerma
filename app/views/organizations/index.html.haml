.container
  %h1 Listing organizations

  %table
    %thead
      %tr
        %th Name
        %th
        %th
        %th

    %tbody
      - @organizations.each do |organization|
        %tr
          %td= organization.name
          %td= policy(organization).show? ? link_to('Show', organization) : ''
          %td= policy(organization).edit? ? link_to('Edit', edit_organization_path(organization)) : ''
          %td= policy(organization).destroy? ? link_to('Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' }) : ''

  %br

  = link_to 'New Organization', new_organization_path