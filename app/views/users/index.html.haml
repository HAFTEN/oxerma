.container
  %h1 Listing users

  %table
    %thead
      %tr
        %th Email
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= policy(user).show? ? (link_to 'Show', user) : ''
          %td= policy(user).edit? ? link_to('Edit', edit_user_path(user)) : ''
          %td= policy(user).destroy? ? link_to('Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }) : ''
