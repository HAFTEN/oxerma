= form_for @user do |f|

  = render partial: 'partials/errors', locals: {model: @user}

  .field.form-group
    = f.label 'Почта'
    = f.text_field :email, class: 'form-control', placeholder: 'name@email.domain'
  .field.form-group
    = f.label 'Телефон'
    = f.text_field :phone, class: 'form-control', placeholder: '+7 000-000-00-00'
  .field.form-group
    = f.label 'Выбирите тип аккаунта:'
    = f.select :virtual_role, Role::TYPE_EXTERNALS.invert, class: 'form-control'
  .field.form-group
    = f.label 'Пароль'
    = f.password_field :password, class: 'form-control'
    %small.text-muted
      Must be more than 8 characters long
  .field.form-group
    = f.label 'Подтвердите пароль'
    = f.password_field :password_confirmation, class: 'form-control'
    %small.text-muted
      Must be more than 8 characters long
  .actions.form-group
    = f.submit 'Создать'